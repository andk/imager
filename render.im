static void
dump_src(const char *note, unsigned char const *src, int width) {
  int i;
  printf("%s - %p/%d\n", note, src, width);
  for (i = 0; i < width; ++i) {
    printf("%02x ", src[i]);
  }
  putchar('\n');
}

