      if (r->line_8) {
	myfree(r->line_8);
	r->line_8 = NULL;
      }
      if (r->fill_line_8) {
	myfree(r->fill_line_8);
	r->fill_line_8 = NULL;
      }
    }
    r->width = new_width;
  }

#code r->im->bits <= 8 && fill->f_fill_with_color
